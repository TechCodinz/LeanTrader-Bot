        try:
            picks = think_once()
            heartbeat(picks)
        except Exception:
            traceback.print_exc()
        return

    while True:
        try:
            picks = think_once()
            heartbeat(picks)
            if not health_check():
                try:
                    send_text("âš ï¸ Health Check Failed!")
                except Exception:
                    pass
        except Exception:
            traceback.print_exc()
        time.sleep(THINK_REPEAT)


