# --- Forex adapters ---
OANDA_ACCOUNT_ID=
OANDA_API_TOKEN=
OANDA_ENV=practice

MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=

IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1
ENABLE_LIVE=true

# Safe defaults for development / paper mode
EXCHANGE_ID=paper
ENABLE_LIVE=false
ALLOW_LIVE=false
API_KEY=
API_SECRET=
BYBIT_TESTNET=false
PAPER_START_CASH=10000

# Order sizing / safety
MAX_ORDER_SIZE=0.01        # maximum base-asset quantity allowed when live
LIVE_ORDER_USD=10.0        # fallback USD size for live order if LIVE_ORDER_AMOUNT not set
LIVE_ORDER_AMOUNT=          # optional fixed base-asset amount for live orders
ATR_STOP_MULT=1.0
ATR_TRAIL_MULT=0.5

# Circuit-breaker / daemon
CIRCUIT_BREAKER_ENABLED=true
DAILY_MAX_LOSS=100.0       # USD loss per day to trip circuit-breaker
POLL_INTERVAL=60           # seconds between daemon cycles

# Timeouts / debug
CCXT_TIMEOUT_MS=15000
CCXT_DEBUG=false

# Redis for signal bus
REDIS_URL=redis://localhost:6379/0

# Web3 publisher controls
RUN_WEB3_PUBLISHER=true
WEB3_SIGNALS_CONFIG=lt_plugins/web3_signals/config.yaml

# Optional Etherscan key (if used in config.yaml)
ETHERSCAN_API_KEY=

# Strategy plugin loader
STRATEGY_PLUGIN=ratio_arb
STRATEGY_CONFIG=strategies/ratio_arb/config.yaml

# Optional background ratio-arb daemon (poll-based)
RUN_RATIO_ARB=false
RATIO_ARB_CONFIG=runtime/strategies/ratio_arb/config.yaml

# Master toggle for background services (bias, pnl, ratio_arb, publisher)
RUN_DAEMONS=true
